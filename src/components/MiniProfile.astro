---
import Facebook from "./icons/Facebook.astro";
import Github from "./icons/Github.astro";
import Linkedin from "./icons/Linkedin.astro";
import Mail from "./icons/Mail.astro";
---

<aside id="aside">
    <div id="MiniProfileMain">
        <img
            src="/profilepicture.webp"
            alt="Joan Sebastian Cardozo Salinas"
            fetchpriority="high"
            id="MiniProfileMainPicture"
            width="300px"
            height="300px"
        />
        <h2 id="MiniProfileMainName">JOAN SEBASTIAN CARDOZO SALINAS</h2>
        <p id="MiniProfileMainDescription">Web Developer Jr</p>
    </div>
    <div id="MiniProfileComplement">
        <ul id="MiniProfileComplement-Links">
            <li class="MiniProfileComplement-LinksItems">
                <a
                    href="https://github.com/PintoGamer64"
                    rel="external"
                    id="GithubLink"
                    aria-label="Mas de mis proyectos en Github"
                >
                    <Github />
                </a>
            </li>
            <li class="MiniProfileComplement-LinksItems">
                <a
                    href="https://www.linkedin.com/in/joancardozo/"
                    rel="external"
                    id="LinkedinLink"
                    aria-label="Mas sobre mi experiencia en Linkedin"
                >
                    <Linkedin />
                </a>
            </li>
            <li class="MiniProfileComplement-LinksItems">
                <a
                    href="mailto:cardozojoan13@gmail.com"
                    rel="external"
                    id="MailLink"
                    aria-label="Escribeme por correo si quieres contactarme"
                >
                    <Mail />
                </a>
            </li>
        </ul>
        <img
            src="https://github-readme-stats.vercel.app/api/top-langs?username=PintoGamer64&hide_border=true&langs_count=8&hide_title=true&theme=transparent&layout=compact&disable_animations=true"
            alt="Joan Sebastian Cardozo Salinas Lenguajes Actividad"
            id="MiniProfileComplement-LenguajesActivity"
            width="320px"
            height="170.656px"
        />
        <img
            src="https://spotify-github-profile.vercel.app/api/view?uid=uwjnzqtalkghfb2gd7ueltxzb&cover_image=true&theme=novatorem&bar_color=ff0000&bar_color_cover=false"
            alt="Joan Sebastian Cardozo Salinas Spotify Actividad"
            id="MiniProfileComplement-SpotifyActivity"
            width="290px"
            height="87.500px"
        />
    </div>
</aside>
<style>
    #aside {
        overflow: hidden;
        left: 0;
        overflow-y: overlay;
        transition: all 0.2s ease;
        position: relative;
        box-sizing: border-box;
        padding: 25px 10px;
        width: 370px;
        height: 100%;
    }

    #aside::-webkit-scrollbar {
        width: 0;
    }

    #aside::before {
        transition: all 0.2s ease;
        content: "PINTOGAMER";
        color: var(--spice-border-active);
        position: absolute;
        top: 4px;
        left: 13px;
        margin: 0;
        padding: 0 10px;
    }

    aside,
    #MiniProfileMain {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    #MiniProfileMainPicture {
        aspect-ratio: 1/1
        transition: all 0.2s ease;
        width: 300px;
        border-radius: 8px;
    }

    #MiniProfileMainName,
    #MiniProfileMainDescription {
        text-align: center;
        margin: 20px 0 0 0;
        width: 300px;
    }

    #MiniProfileMainName {
        font-size: 17px;
        font-weight: 200;
        text-align: center;
    }

    #MiniProfileComplement {
        width: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    #MiniProfileComplement-LenguajesActivity {
        aspect-ratio: 320/171;
    }

    #MiniProfileComplement-SpotifyActivity {
        aspect-ratio: 35/11;
        transition: all 0.2s ease;
        width: 280px;
        border-bottom: 3px solid var(--spice-border-active);
        padding: 10px;
    }

    #MiniProfileComplement-Links {
        margin: 16px 0 0 0;
        list-style: none;
        display: flex;
        padding: 0;
        width: 300px;
        justify-content: space-evenly;
    }

    #FacebookLink,
    #GithubLink,
    #LinkedinLink,
    #MailLink {
        display: grid;
        place-items: center;
        width: 100%;
        height: 100%;
    }

    .MiniProfileComplement-LinksItems {
        transition: all 0.2s ease;
        width: 60px;
        border-radius: 8px;
        height: 60px;
        background-color: var(--IconsLinks-Inactive);
    }

    .MiniProfileComplement-LinksItems:hover {
        background-color: var(--IconsLinks-Active);
    }

    @media screen and (max-width: 1200px) {
        #aside {
            background-image: radial-gradient(
                ellipse 80% 80% at 50% -20%,
                #7877c64d,
                #fff0
            ); /* var(--backgroundColorMain) */
            --tw-bg-opacity: 1;
            background-color: rgb(10 10 10 / var(--tw-bg-opacity));
            left: -370px;
            overflow: hidden;
            overflow-y: overlay;
            transition: all 0.2s ease;
            position: absolute;
            box-sizing: border-box;
            padding: 25px 10px;
            z-index: 1;
            width: 370px;
            height: 100%;
        }

        main {
            display: flex;
        }

        #Content {
            transition: all 0.2s ease;
            width: calc(100% - 320px);
            height: 100%;
            margin: 0 0 0 20px;
            position: relative;
            box-sizing: border-box;
            border-bottom: var(--border-width) var(--border-style)
                var(--spice-border-active);
        }
    }
</style>
