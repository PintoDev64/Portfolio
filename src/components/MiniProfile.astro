---
import Facebook from "./icons/Facebook.astro";
import Github from "./icons/Github.astro";
import Linkedin from "./icons/Linkedin.astro";
---

<aside>
    <div id="MiniProfileMain">
        <img
            src="/profilepicture.jpg"
            alt="Joan Sebastian Cardozo Salinas"
            id="MiniProfileMainPicture"
        />
        <h2 id="MiniProfileMainName">JOAN SEBASTIAN CARDOZO SALINAS</h2>
    </div>
    <div id="MiniProfileComplement">
        <ul id="MiniProfileComplement-Links">
            <li class="MiniProfileComplement-LinksItems">
                <a
                    href="https://www.facebook.com/joansebastian.cardozosalinas.92"
                    rel="external"
                    id="FacebookLink"
                    aria-label="Mas sobre mi en Facebook"
                >
                    <Facebook />
                </a>
            </li>
            <li class="MiniProfileComplement-LinksItems">
                <a
                    href="https://github.com/PintoGamer64"
                    rel="external"
                    id="GithubLink"
                    aria-label="Mas de mis proyectos en Github"
                >
                    <Github />
                </a>
            </li>
            <li class="MiniProfileComplement-LinksItems">
                <a
                    href="https://www.linkedin.com/in/joancardozo/"
                    rel="external"
                    id="LinkedinLink"
                    aria-label="Mas sobre mi experiencia en Linkedin"
                >
                    <Linkedin />
                </a>
            </li>
        </ul>
        <img
            src="https://spotify-github-profile.vercel.app/api/view?uid=uwjnzqtalkghfb2gd7ueltxzb&cover_image=true&theme=novatorem&bar_color=ff0000&bar_color_cover=false"
            alt="Joan Sebastian Cardozo Salinas Spotify Actividad"
            id="MiniProfileComplement-SpotifyActivity"
            width="290px"
        />
    </div>
</aside>
<script>
    const SpotifyActivity = document.getElementById("MiniProfileComplement-SpotifyActivity");
    setInterval(() => {
        SpotifyActivity?.setAttribute("src", "https://spotify-github-profile.vercel.app/api/view?uid=uwjnzqtalkghfb2gd7ueltxzb&cover_image=true&theme=novatorem&bar_color=ff0000&bar_color_cover=false")
    }, 10000);
</script>
<style>
    aside {
        position: relative;
        box-sizing: border-box;
        padding: 25px 10px;
        width: 370px;
        height: fit-content;
        border: var(--border-width) var(--border-style)
            var(--spice-border-inactive);
    }

    aside:hover {
        border: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }

    aside::before {
        content: "PINTOGAMER";
        color: var(--spice-header);
        position: absolute;
        top: 0px;
        left: 13px;
        margin: -10px 0px;
        background: var(--backgroundColorMain);
        padding: 0 10px;
    }

    aside:hover::before {
        color: var(--spice-border-active);
    }

    aside,
    #MiniProfileMain {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    #MiniProfileMainPicture {
        width: 300px;
        border-radius: 8px;
    }

    #MiniProfileMainName {
        margin: 20px 0 0 0;
        width: 320px;
        font-size: larger;
        font-weight: 200;
        text-align: center;
    }

    #MiniProfileComplement {
        width: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    #MiniProfileComplement-SpotifyActivity {
        transition: all 0.2s ease;
        width: 280px;
        border-radius: 8px;
        padding: 10px;
        background-color: var(--IconsLinks-Active);
    }

    #MiniProfileComplement-Links {
        list-style: none;
        display: flex;
        padding: 0;
        width: 300px;
        justify-content: space-evenly;
    }

    #FacebookLink,
    #GithubLink,
    #LinkedinLink {
        display: grid;
        place-items: center;
        width: 100%;
        height: 100%;
    }

    .MiniProfileComplement-LinksItems {
        transition: all 0.2s ease;
        width: 60px;
        border-radius: 8px;
        height: 60px;
        background-color: var(--IconsLinks-Inactive);
    }

    .MiniProfileComplement-LinksItems:hover {
        background-color: var(--IconsLinks-Active);
    }
</style>
