<style>
    nav {
        padding: 10px 0 10px 0;
        display: flex;
        width: 100%;
        height: 100px;
        align-items: center;
        justify-content: space-between;
        position: relative;
        box-sizing: border-box;
        border-bottom: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }

    #Navlang,
    #NavLogo {
        width: 130px;
        height: 80px;
        display: grid;
        place-items: center;
    }

    #LanguageLogoImg,
    #MilleniumLogoImg {
        width: 50px;
        height: 50px;
    }

    #NavControls {
        width: calc(100% - 130px);
    }

    #NavControlsList {
        padding: 0;
        display: flex;
        margin: 0;
        list-style: none;
        justify-content: space-evenly;
    }

    .NavControlsList-Items {
        width: 150px;
        text-align: center;
        height: 50px;
        box-sizing: border-box;
        display: grid;
        place-content: center;
        transition: all 0.2s ease;
        border-radius: 8px;
    }

    .NavControlsList-Items:hover {
        background-color: var(--IconsLinks-Active);
    }

    .NavControlsList-Items h3 {
        width: 150px;
        height: 50px;
        margin: 0;
    }

    .NavControlsList-Items a {
        width: 100%;
        display: grid;
        place-items: center;
        height: 100%;
        text-decoration: none;
    }
</style>
