---
import Navbar from "../components/Navbar.astro";
import MiniProfile from "../components/MiniProfile.astro";
import { Analytics } from "@vercel/analytics/react";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="theme-color" content="#000000" />
        <link rel="apple-touch-icon" href="/logo512.png" />
        <link rel="manifest" href="/manifest.json" />
        <link
            rel="canonical"
            href="https://portfolio-six-sooty-93.vercel.app/"
        />
        <meta name="description" content="Amante de la tecnologia web" />
        <meta name="viewport" content="width=device-width" />
        <meta
            property="og:title"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta property="og:image" content="/joancardozo.png" />
        <meta property="og:image:width" content="1280" />
        <meta property="og:image:height" content="720" />
        <meta
            property="og:url"
            content="https://portfolio-six-sooty-93.vercel.app/"
        />
        <meta
            property="og:site_name"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta property="og:type" content="website" />
        <meta
            property="og:description"
            content="Sistema para enviar sus demos/partidas directamente al canal Znorux en Youtube"
        />
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:title"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta
            name="twitter:description"
            content="Amante de la tecnologia web"
        />
        <meta name="twitter:image" content="/joancardozo.png" />
        <meta
            name="twitter:image:alt"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <title>{title}</title>
    </head>
    <body>
        <Analytics />
        <main>
            <MiniProfile />
            <div id="Content">
                <Navbar />
                <slot />
            </div>
        </main>
    </body>
</html>
<style is:global>
    @font-face {
        font-family: "CascadiaMono";
        src: url("/CascadiaMono.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    :root {
        --colorText: #ffffff;
        --backgroundColorMain: #121212;

        --border-radius: 0px;
        --border-width: 2px;
        --border-style: solid;
        --spice-header: #535353;
        --spice-border-active: #ff0000;
        --spice-border-inactive: #535353;

        --IconsLinks-Active: #1a1a1a;
        --IconsLinks-Inactive: transparent;
    }

    * {
        font-family: CascadiaMono;
        color: var(--colorText);
    }

    body {
        background-color: var(--backgroundColorMain);
        display: flex;
        margin: 0;
        width: 100vw;
        height: 100vh;
        justify-content: center;
    }

    main {
        width: 1200px;
        margin: 25px 0;
        display: flex;
    }

    #Content {
        width: calc(100% - 320px);
        margin: 0 0 0 20px;
        position: relative;
        box-sizing: border-box;
        border: var(--border-width) var(--border-style)
            var(--spice-border-inactive);
    }

    #Content:hover {
        border: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }

    #Content:hover nav {
        border-bottom: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }
</style>
