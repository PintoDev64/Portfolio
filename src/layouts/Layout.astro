---
import Navbar from "../components/Navbar.astro";
import MiniProfile from "../components/MiniProfile.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="theme-color" content="#000000" />
        <link rel="apple-touch-icon" href="/logo512.png" />
        <meta name="description" content="Amante de la tecnologia web" />
        <meta name="viewport" content="width=device-width" />
        <meta
            property="og:title"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta property="og:image" content="/joancardozo.png" />
        <meta property="og:image:width" content="1280" />
        <meta property="og:image:height" content="720" />
        <meta property="og:url" content="https://joancardozo.website/" />
        <meta
            property="og:site_name"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta property="og:type" content="website" />
        <meta
            property="og:description"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:title"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <meta
            name="twitter:description"
            content="Amante de la tecnologia web"
        />
        <meta
            name="twitter:image"
            content="https://joancardozo.website/joancardozo.png"
        />
        <meta
            name="twitter:image:alt"
            content="Joan Cardozo | FullStack Web Developer"
        />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <MiniProfile />
            <div id="Content">
                <Navbar />
                <div id="ContentScroll">
                    <slot />
                    <div id="ContentScrollFooter">
                        <p>
                            Referencia: <a
                                class="urls"
                                href="https://porfolio.dev/"
                                target="_blank"
                                rel="noopener noreferrer">portfolio.dev</a
                            >, Hecho con cariño ❤
                        </p>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
<style is:global>
    @font-face {
        font-family: "CascadiaMono";
        src: url("/CascadiaMono.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    :root {
        --colorText: #ffffff;
        --backgroundColorMain: #121212;

        --border-radius: 0px;
        --border-width: 3px;
        --border-style: solid;
        --spice-header: #535353;
        --spice-border-active: #ff0000;
        --spice-border-active-t: #ff000081;

        --IconsLinks-Active: #1a1a1a;
        --IconsLinks-Inactive: transparent;
    }

    * {
        font-family: CascadiaMono;
        word-spacing: -2px;
        color: var(--colorText);
    }

    a.urls {
        color: #ff0000;
        font-style: italic;
    }

    body {
        background-image: radial-gradient(
            ellipse 80% 80% at 50% -20%,
            #7877c64d,
            #fff0
        ); /* var(--backgroundColorMain) */
        --tw-bg-opacity: 1;
        background-color: rgb(10 10 10 / var(--tw-bg-opacity));
        display: flex;
        margin: 0;
        width: 100vw;
        height: 100vh;
        justify-content: center;
    }

    main {
        width: 1200px;
        margin: 25px 0;
        display: flex;
    }

    #AvailableWork {
        align-items: center;
        display: flex;
        margin: 0 0 0 20px;
    }

    #AvailableWork_Text_Conic {
        background-image: conic-gradient(
            from 90deg at 50% 50%,
            #51e4b8,
            #21554e,
            #51e4b8
        );
        animation: spin 2s linear infinite;
        inset: -1000%;
        position: absolute;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    #AvailableWork_Text_Content {
        background-color: var(--backgroundColorMain);
        color: #fffc;
        font-size: 0.875rem;
        line-height: 1.25rem;
        border-radius: 99999px;
        padding: 5px 10px;
        z-index: 1;
    }

    #AvailableWork_Text {
        padding: 1px;
        border-radius: 9999px;
        overflow: hidden;
        display: inline-flex;
        position: relative;
    }

    #Content {
        transition: all 0.2s ease;
        width: calc(100% - 320px);
        height: 100%;
        margin: 0 0 0 20px;
        position: relative;
        box-sizing: border-box;
        border-bottom: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }

    #Content:hover {
        border-bottom: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }

    #Content:hover nav {
        transition: all 0.2s ease;
        border-bottom: var(--border-width) var(--border-style)
            var(--spice-border-active);
    }

    #ContentScroll {
        height: calc(100% - 100px);
        overflow: hidden;
        box-sizing: border-box;
        overflow-y: auto;
        padding: 0 20px 0;
        scroll-behavior: smooth;
    }

    #ContentScroll::-webkit-scrollbar {
        overflow: hidden;
        width: 10px;
        box-sizing: border-box;
    }

    #ContentScroll::-webkit-scrollbar-track {
        background-color: transparent;
    }

    #ContentScroll::-webkit-scrollbar-thumb {
        background-color: #ffffff;
    }

    #ContentScrollFooter {
        transform: translateX(-20px);
        margin: 30px 0 0 0;
        width: calc(100% + 40px);
        height: 50px;
        display: grid;
        place-items: center;
        border: none;
        border-top: #ffffff var(--border-style) var(--border-width);
    }

    #ContentScrollFooter p {
        margin: 0;
    }

    @media screen and (max-width: 1200px) {
        main {
            margin: 5px 0 25px 0;
        }

        #Content {
            transition: all 0.2s ease;
            width: 800px;
            height: 100%;
            margin: 0 auto;
            position: relative;
            box-sizing: border-box;
            border-bottom: var(--border-width) var(--border-style)
                var(--spice-border-active);
        }

        #ContentScroll {
            padding: 0 10px 0;
        }

        #ContentScroll::-webkit-scrollbar {
            overflow: hidden;
            width: 0px;
            box-sizing: border-box;
        }

        #ContentScrollFooter {
            transform: translateX(-10px);
            margin: 30px 0 0 0;
            width: calc(100% + 20px);
            border: none;
            border-top: #ffffff var(--border-style) var(--border-width);
        }
    }

    @media screen and (max-width: 800px) {
        main {
            margin: 5px 0 25px 0;
        }
        #Content {
            transition: all 0.2s ease;
            width: 100%;
            height: 100%;
            margin: 0 auto;
            position: relative;
            box-sizing: border-box;
            border-bottom: var(--border-width) var(--border-style)
                var(--spice-border-active);
        }
    }
</style>
